reg4 = smf.ols('breastcancerper100th ~ urbanrate_c', data=data_clean).fit()
print (reg4.summary())
# quadratic (polynomial) regression analysis

reg5 = smf.ols('breastcancerper100th ~ urbanrate_c + I(urbanrate_c**2)', data=data_clean).fit()
print (reg5.summary())
# adding urban rate
reg6 = smf.ols('breastcancerper100th ~ urbanrate_c + I(urbanrate_c**2) + co2emissions_c', data=data_clean).fit()
print (reg6.summary())

reg7 = smf.ols('breastcancerper100th ~ urbanrate_c + co2emissions_c', data=data_clean).fit()
print (reg7.summary())

scat3 = seaborn.regplot(x="urbanrate", y="breastcancerper100th", scatter=True, data=data_clean)
plt.xlabel('Urban Rate')
plt.ylabel('Breast Cancer')
scat4 = seaborn.regplot(x="urbanrate_c", y="breastcancerper100th", scatter=True, order=2, data=data_clean)
plt.xlabel('Urban Rate')
plt.ylabel('Breast Cancer')

#Q-Q plot for normality
fig6=sm.qqplot(reg6.resid, line='r')

####################################################################################
# EVALUATING MODEL FIT breastcancer co2 emission urbanrate
####################################################################################
reg1 = smf.ols('breastcancerper100th ~ co2emissions_c', data=data_clean).fit()
print (reg1.summary())

# quadratic (polynomial) regression analysis

reg2 = smf.ols('breastcancerper100th ~ co2emissions_c + I(co2emissions_c**2)', data=data_clean).fit()
print (reg2.summary())
# adding urban rate
reg3 = smf.ols('breastcancerper100th ~ co2emissions_c + I(co2emissions_c**2) + urbanrate_c', 
               data=data_clean).fit()
print (reg3.summary())

#Q-Q plot for normality
fig4=sm.qqplot(reg3.resid, line='r')
